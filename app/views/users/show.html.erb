<% provide(:title, @user.name ) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <p id="notice"><%= notice %></p>
    </section>
  </aside>
  <aside class="col-md-4 spacing">
    <div>
      <h3>User Information</h3>
    </div>
    <div>
      <strong>Name:</strong>
      <%= @user.name %>
    </div>
    <div>
      <strong>Email:</strong>
      <%= @user.email %>
    </div>
    <div>
      <strong>Time:</strong>
      <%= Time.now %>
    </div>
    <div>
      <strong>How To:</strong>
      <iframe width="420" height="315"
              src="https://www.youtube.com/embed/MagR7ay7lHc?controls=0">
      </iframe>
    </div>
    <div>
      <strong>Files:</strong>
      <ul>
        <li><%= link_to "Click to Download First File", first_path, :method => 'post' %></li>
        <li><%= link_to "Click to Download Second File", second_path, :method => 'post' %></li>
        <li><%= link_to "Click to Download Third File", third_path, :method => 'post' %></li>
        <li><%= link_to "Click to Download Fourth File", fourth_path, :method => 'post' %></li>
      </ul>

    </div>
  </aside>
