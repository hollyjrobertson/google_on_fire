  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <p id="notice"><%= notice %></p>
    </section>
  </aside>
  <aside class="col-md-4 spacing">
    <div>
      <h3>User Information</h3>
    </div>
    <div>
      <strong>Name:</strong>
      <%= @user.name %>
    </div>
    <div>
      <strong>Email:</strong>
      <%= @user.email %>
    </div>
    <div>
      <strong>Time:</strong>
      <%= Time.now %>
    </div>
    <div>
      <strong>Files:</strong>
      <%= link_to "Click to Download", download_path, :method => :post%>
    </div>
  </aside>
